flowchart TD
    start([Start]) --> createCampaign[Create new campaign]
    createCampaign --> setCampaignDetails[Set campaign name & description]
    setCampaignDetails --> selectType{Select campaign type}
    
    selectType -->|One-time| setSchedule[Set delivery date & time]
    selectType -->|Recurring| setRecurrence[Set recurrence pattern]
    selectType -->|Trigger-based| setTrigger[Configure trigger conditions]
    selectType -->|A/B Test| setupABTest[Set up A/B test parameters]
    
    setSchedule --> selectSegment[Select target segment]
    setRecurrence --> selectSegment
    setTrigger --> selectSegment
    setupABTest --> createVariants[Create test variants]
    createVariants --> selectSegment
    
    selectSegment --> selectTemplate[Select or create message template]
    selectTemplate --> personalize[Set personalization variables]
    personalize --> preview[Preview notification]
    preview --> validate{Validation\nOK?}
    
    validate -->|No| fixErrors[Fix errors]
    fixErrors --> preview
    validate -->|Yes| saveAsDraft[Save as draft]
    
    saveAsDraft --> requireApproval{Approval\nrequired?}
    requireApproval -->|Yes| submitApproval[Submit for approval]
    submitApproval --> waitApproval[Wait for approval]
    waitApproval --> approved{Approved?}
    
    approved -->|No| reviseCampaign[Revise campaign]
    reviseCampaign --> preview
    approved -->|Yes| schedule[Schedule campaign]
    
    requireApproval -->|No| schedule
    schedule --> activateCampaign[Activate campaign]
    activateCampaign --> end([End])
