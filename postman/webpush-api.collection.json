{
  "info": {
    "name": "WebPush API",
    "description": "Collection for WebPush API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "{{baseUrl}}"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Create Notification",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{baseUrl}}/notifications/",
          "host": ["{{baseUrl}}"],
          "path": ["notifications", ""]
        },
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"title\": \"Test Notification\",\n    \"body\": \"This is a test message\",\n    \"icon\": null,\n    \"data\": {\n        \"key\": \"value\"\n    }\n}"
        }
      }
    },
    {
      "name": "List Notifications",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/notifications/?skip=0&limit=100",
          "host": ["{{baseUrl}}"],
          "path": ["notifications", ""],
          "query": [
            {
              "key": "skip",
              "value": "0"
            },
            {
              "key": "limit",
              "value": "100"
            }
          ]
        }
      }
    },
    {
      "name": "Get Notification by ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/notifications/1",
          "host": ["{{baseUrl}}"],
          "path": ["notifications", "1"]
        }
      }
    }
  ]
}
