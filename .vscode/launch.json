{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload"
            ],
            "jinja": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/webpush_api",
                "PATH": "${workspaceFolder}/.venv/bin:${env:PATH}"
            }
        }
    ]
}